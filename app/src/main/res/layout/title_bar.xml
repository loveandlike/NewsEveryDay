<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/red"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/menu_back" />

    <ImageButton
        android:id="@+id/title_devider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/title_bar"
        android:background="@drawable/bar_divider" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/title_devider"
        android:text=" 新闻 "
        android:textColor="#fff"
        android:textSize="23sp" />
    <ImageView
        android:id="@+id/chim"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:src="@mipmap/chim"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/title"
        android:layout_toEndOf="@+id/title"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp" />
 <TextView
     android:id="@+id/tv_jinye"
     android:layout_width="60dp"
     android:layout_height="match_parent"
     android:textColor="@color/zhi"
     android:text="金爷"
     android:textSize="25sp"
     android:layout_alignParentBottom="true"
     android:layout_alignParentRight="true"
     android:layout_alignParentEnd="true" />

</RelativeLayout>